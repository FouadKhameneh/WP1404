COMPOSE_PROJECT_NAME=police-digital-ops

POSTGRES_DB=police_ops
POSTGRES_USER=police_user
POSTGRES_PASSWORD=police_password
POSTGRES_PORT=5432

BACKEND_PORT=8000
FRONTEND_PORT=3000

DJANGO_SETTINGS_MODULE=config.settings
DJANGO_ENV=dev
DJANGO_SECRET_KEY=replace-with-strong-secret
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend
DJANGO_TIME_ZONE=UTC
DJANGO_LOG_LEVEL=INFO
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOW_CREDENTIALS=True
API_PAGE_SIZE=20
REST_DEFAULT_PERMISSION_CLASS=rest_framework.permissions.AllowAny
OPENAPI_TITLE=Police Digital Operations API
OPENAPI_DESCRIPTION=API documentation for the Police Digital Operations System.
OPENAPI_VERSION=1.0.0
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

DATABASE_URL=postgresql://police_user:police_password@postgres:5432/police_ops
DB_HOST=postgres
DB_PORT=5432
DB_NAME=police_ops
DB_USER=police_user
DB_PASSWORD=police_password

NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api/v1

BACKEND_START_CMD=python manage.py runserver 0.0.0.0:8000
FRONTEND_START_CMD=npm run dev -- --host 0.0.0.0 --port 3000
WORKER_START_CMD=celery -A config worker -l info
